   // storage.rules
   rules_version = '2';
   service firebase.storage {
     match /b/{bucket}/o {
       match /profile_images/{userId} {
         allow read: if request.auth != null;
         allow write: if request.auth.uid == userId;
       }

       match /book_covers/{bookId} {
         allow read: if request.auth != null;
         allow write: if request.auth != null;
       }
     }
   }